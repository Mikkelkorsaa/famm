@page "/"
@inject IJSRuntime JSRuntime

<div class="page-container">
    <div class="content" style="opacity: @(isVisible ? 1 : 0); transform: @(isVisible ? "translateY(0)" : "translateY(20px)");">
        <div class="title">DANVA Konference planlægger</div>
        <div class="description">
            Velkommen til din ultimative løsning til at planlægge og organisere konferencer.
            Uanset om det er små møder eller store events, gør DANVA Konference planlægger det nemt og effektivt.
        </div>
    </div>
</div>

<style>
    

    body {
        margin: 0;
        padding: 0;
        font-family: "Barlow Semi Condensed", sans-serif;
        background-color: #f9f9f9;
        color: #333;
    }

    .page-container {
        width: 100%;
        height: 100-10vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .content {
        text-align: center;
        transition: opacity 1.5s ease-in-out, transform 1.5s ease-in-out;
    }

    .title {
        font-size: 3em;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .description {
        font-size: 1.2em;
        line-height: 1.5;
        max-width: 600px;
        margin: 0 auto;
    }
</style>

@code {
    private bool isVisible = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Task.Delay(100); // Slight delay for smooth rendering
            isVisible = true;
            StateHasChanged(); // Trigger UI update
        }
    }
}
